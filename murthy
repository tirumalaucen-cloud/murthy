apiVersion: apps/v1
kind: Deployment
metadata:
  name: httpd-deployment
  labels:
    app: httpd-app
spec:
  replicas: 2 # Specifies the number of desired pods
  selector:
    matchLabels:
      app: httpd-app
  template:
    metadata:
      labels:
        app: httpd-app
    spec:
      containers:
      - name: httpd-container
        image: httpd:latest # Uses the latest Apache HTTP Server image
        ports:
        - containerPort: 80 # The port the container exposes

